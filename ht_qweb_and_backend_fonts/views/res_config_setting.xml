<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_qweb_fonts" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.qweb.fonts</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='emails']" position="after">
                        <h2>Qweb &amp; Backend Fonts Section</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <label for="pdf_font" string="Qweb fonts" class="col-3 col-lg-3 o_light_label"/>
                                <field name="pdf_font" class="oe_inline" style="width: 139px !important;height: 30px;"/>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <label for="backend_fonts" string="backend fonts" class="col-4 col-lg-4 o_light_label"/>
                                <field name="backend_fonts" class="oe_inline" style="width: 139px !important;height: 30px;"/>
                            </div>
                        </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>